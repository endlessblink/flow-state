{
    # Basic options
    email your-email@example.com
    admin off
}

# Serve on all interfaces on port 80
:80 {
    # Reverse proxy for Supabase API - strips /supabase/ prefix
    handle_path /supabase/* {
        reverse_proxy http://192.168.5.45:54321 {
            header_up Host {upstream_hostport}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
        }
    }

    # Reverse proxy to the app container
    reverse_proxy app:80

    # Security Headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Frame-Options "DENY"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
        # Content-Security-Policy: Relaxed slightly to allow Supabase/Local connections
        Content-Security-Policy "default-src 'self' http: https: data: blob: 'unsafe-inline' 'unsafe-eval'; upgrade-insecure-requests;"
    }

    # Compression
    encode gzip zstd

    # Logging
    log {
        output file /var/log/caddy/access.log
    }
}
