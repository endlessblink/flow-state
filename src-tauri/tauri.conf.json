{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "PomoFlow",
  "version": "0.1.0",
  "identifier": "com.pomoflow.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5546",
    "beforeDevCommand": "",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "PomoFlow",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' http: https: ws: wss: data: blob: tauri: asset:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "Pomodoro timer with task management",
    "longDescription": "PomoFlow combines a Pomodoro timer with powerful task management across Board, Calendar, and Canvas views."
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/YOUR_USERNAME/pomo-flow/releases/latest/download/latest.json"
      ],
      "pubkey": ""
    }
  }
}
